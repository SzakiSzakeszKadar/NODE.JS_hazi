<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kölcsönzések</title>
    <style>
        /* Közös stílusok */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        a {
            color: #3498db;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Kölcsönzések konténer */
        .loan-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .loan-item {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #f9f9f9;
        }

        .loan-item p {
            margin: 5px 0;
        }

        .loan-item p strong {
            color: #2c3e50;
        }

        .loan-item .status {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: bold;
        }

        .loan-item .status.aktív {
            background-color: #2ecc71;
            color: white;
        }

        .loan-item .status.visszahozott {
            background-color: #95a5a6;
            color: white;
        }

        .loan-item .status.lejárt {
            background-color: #e74c3c;
            color: white;
        }

        /* Új kölcsönzés gomb */
        .new-loan-button {
            display: inline-block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #2ecc71;
            color: white;
            border-radius: 4px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .new-loan-button:hover {
            background-color: #27ae60;
        }

        /* Visszavétel gomb */
        .return-button {
            display: inline-block;
            margin: 5px 0;
            padding: 5px 10px;
            background-color: #e74c3c;
            color: white;
            border-radius: 4px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .return-button:hover {
            background-color: #c0392b;
        }

        /* Vissza gomb */
        .back-button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #95a5a6;
            color: white;
            border-radius: 4px;
            text-align: center;
            width: fit-content;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #7f8c8d;
        }

        .action-buttons {
            margin-top: 10px;
        }

        .action-buttons a {
            display: inline-block;
            margin-right: 10px;
            padding: 5px 10px;
            border-radius: 4px;
            color: white;
            text-decoration: none;
        }

        .megtekintes {
            background-color: #3498db;
        }

        .megtekintes:hover {
            background-color: #2980b9;
        }

        .szerkesztes {
            background-color: #f1c40f;
        }

        .szerkesztes:hover {
            background-color: #f39c12;
        }

        .torles {
            background-color: #e74c3c;
        }

        .torles:hover {
            background-color: #c0392b;
        }
    </style>
</head>
<body>
<h1>Kölcsönzések</h1>
<a href="/rental/addnew" class="new-loan-button">Új kölcsönzés felvétele</a>
<div class="loan-container">
    <% rentalList.forEach(function(rental) { %>
    <div class="loan-item">
        <p><strong>Ügyfél neve:</strong> <%= rental.customerName %></p>
        <p><strong>Film címe:</strong> <%= rental.vhsTitle %></p>
        <p><strong>Kölcsönzés dátuma:</strong> <%= new Date(rental.rentalDate).toLocaleDateString('hu-HU') %></p>
        <p><strong>Visszahozás határideje:</strong> <%= new Date(rental.returnDate).toLocaleDateString('hu-HU') %></p>
        <p>
            <strong>Státusz:</strong> 
            <span class="status <%= rental.status %>">
                <%= rental.status.charAt(0).toUpperCase() + rental.status.slice(1) %>
            </span>
        </p>
        <div class="action-buttons">
            <a href="/rental/detailedview/<%= rental._id %>" class="megtekintes">Megtekintés</a>
            <% if (rental.status === 'aktív') { %>
                <a href="/rental/edit/<%= rental._id %>" class="szerkesztes">Szerkesztés</a>
                <a href="/rental/delete/<%= rental._id %>" class="torles" onclick="return confirm('Biztosan törölni szeretnéd a kölcsönzést?')">Törlés</a>
            <% } %>
        </div>
    </div>
    <% }); %>
</div>
<a href="/" class="back-button">Vissza</a>
</body>
</html>
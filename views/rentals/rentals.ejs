<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kölcsönzések</title>
    <style>
        /* Közös stílusok */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        a {
            color: #3498db;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Kölcsönzések konténer */
        .loan-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            position: relative;
        }

        .loan-item {
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #f9f9f9;
            position: relative;
        }

        .loan-item p {
            margin: 5px 0;
        }

        .loan-item p strong {
            color: #2c3e50;
        }

        .loan-item .status {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: bold;
        }

        .loan-item .status.aktív {
            background-color: #2ecc71;
            color: white;
        }

        .loan-item .status.visszahozott {
            background-color: #95a5a6;
            color: white;
        }

        .loan-item .status.lejárt {
            background-color: #e74c3c;
            color: white;
        }

        /* Új kölcsönzés gomb */
        .new-loan-button {
            display: inline-block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #2ecc71;
            color: white;
            border-radius: 4px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .new-loan-button:hover {
            background-color: #27ae60;
        }

        /* Visszavétel gomb */
        .return-button {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 8px 15px;
            background-color: #e74c3c;
            color: white;
            border-radius: 4px;
            text-align: center;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }

        .return-button:hover {
            background-color: #c0392b;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        /* Vissza gomb */
        .back-button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #95a5a6;
            color: white;
            border-radius: 4px;
            text-align: center;
            width: fit-content;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #7f8c8d;
        }

        .action-buttons {
            margin-top: 10px;
        }

        .action-buttons a {
            display: inline-block;
            margin-right: 10px;
            padding: 5px 10px;
            border-radius: 4px;
            color: white;
            text-decoration: none;
        }

        .megtekintes {
            background-color: #3498db;
        }

        .megtekintes:hover {
            background-color: #2980b9;
        }

        .torles {
            background-color: #e74c3c;
        }

        .torles:hover {
            background-color: #c0392b;
        }

        /* Státusz változtatás animáció */
        .status-change {
            transition: all 0.3s ease;
        }

        .status-change.visszahozott {
            background-color: #95a5a6;
            color: white;
        }
    </style>
</head>
<body>
<h1>Kölcsönzések</h1>
<a href="/rental/addnew" class="new-loan-button">Új kölcsönzés felvétele</a>
<div class="loan-container">
    <% rentalList.forEach(function(rental) { %>
    <div class="loan-item" id="rental-<%= rental._id %>">
        <p><strong>Ügyfél neve:</strong> <%= rental.customerName %></p>
        <p><strong>Film címe:</strong> <%= rental.vhsTitle %></p>
        <p><strong>Kölcsönzés dátuma:</strong> <%= new Date(rental.rentalDate).toLocaleDateString('hu-HU') %></p>
        <p><strong>Visszahozás határideje:</strong> <%= new Date(rental.returnDate).toLocaleDateString('hu-HU') %></p>
        <p>
            <strong>Státusz:</strong> 
            <span class="status <%= rental.status %>" id="status-<%= rental._id %>">
                <%= rental.status.charAt(0).toUpperCase() + rental.status.slice(1) %>
            </span>
        </p>
        <div class="action-buttons">
            <a href="/rental/detailedview/<%= rental._id %>" class="megtekintes">Megtekintés</a>
            <% if (rental.status === 'aktív') { %>
                <a href="/rental/delete/<%= rental._id %>" class="torles" onclick="return confirm('Biztosan törölni szeretnéd a kölcsönzést?')">Törlés</a>
            <% } %>
        </div>
        <% if (rental.status === 'aktív') { %>
            <button class="return-button" onclick="returnRental('<%= rental._id %>')">Visszavétel</button>
        <% } %>
    </div>
    <% }); %>
</div>
<a href="/" class="back-button">Vissza</a>

<script>
function returnRental(rentalId) {
    if (confirm('Biztosan visszavetted a kölcsönzést?')) {
        fetch(`/rental/return/${rentalId}`, {
            method: 'GET'
        })
        .then(response => {
            if (response.ok) {
                const statusElement = document.getElementById(`status-${rentalId}`);
                const rentalItem = document.getElementById(`rental-${rentalId}`);
                const returnButton = rentalItem.querySelector('.return-button');
                
                statusElement.textContent = 'Visszahozott';
                statusElement.className = 'status visszahozott';
                rentalItem.classList.add('status-change', 'visszahozott');
                
                if (returnButton) {
                    returnButton.remove();
                }
                
                const actionButtons = rentalItem.querySelector('.action-buttons');
                const deleteButton = actionButtons.querySelector('.torles');
                if (deleteButton) {
                    deleteButton.remove();
                }
            } else {
                alert('Hiba történt a visszavétel során!');
            }
        })
        .catch(error => {
            console.error('Hiba:', error);
            alert('Hiba történt a visszavétel során!');
        });
    }
    return false;
}
</script>
</body>
</html>
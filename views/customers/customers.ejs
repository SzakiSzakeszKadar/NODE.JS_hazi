<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ügyfelek</title>
    <style>
        /* Közös stílusok */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }

        a {
            color: #3498db;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Táblázat konténer */
        .table-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            overflow-x: auto;
        }

        /* Táblázat stílusok */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            white-space: nowrap;
        }

        th {
            background-color: #3498db;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Művelet gombok */
        .action-buttons {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
        }

        .action-buttons a {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 14px;
            transition: background-color 0.3s ease;
            white-space: nowrap;
        }

        .action-buttons a.megtekintes {
            background-color: #3498db;
            color: white;
        }

        .action-buttons a.szerkesztes {
            background-color: #f1c40f;
            color: white;
        }

        .action-buttons a.torles {
            background-color: #e74c3c;
            color: white;
        }

        .action-buttons a:hover {
            opacity: 0.9;
        }

        /* Új ügyfél gomb */
        .new-customer-button {
            display: inline-block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #2ecc71;
            color: white;
            border-radius: 4px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .new-customer-button:hover {
            background-color: #27ae60;
        }

        /* Vissza gomb */
        .back-button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #95a5a6;
            color: white;
            border-radius: 4px;
            text-align: center;
            width: fit-content;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #7f8c8d;
        }

        /* Responsive stílusok */
        @media (max-width: 768px) {
            .table-container {
                margin: 0 -20px;
            }

            th, td {
                padding: 8px 10px;
                font-size: 14px;
            }

            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
<h1>Ügyfelek</h1>
<a href="/customer/addnew/1" class="new-customer-button">Új ügyfél felvétele</a>

<div class="table-container">
    <table>
        <thead>
        <tr>
            <th>Név</th>
            <th>Email</th>
            <th>Telefonszám</th>
            <th>Tagság típusa</th>
            <th>Műveletek</th>
        </tr>G
        </thead>
        <tbody>
        <% customerList.forEach(function(customer) { %>
            <tr>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td><%= customer.membershipType %></td>
                <td class="action-buttons">
                    <a href="/customer/detailedview/<%= customer.id %>" class="megtekintes">Megtekintés</a>
                    <a href="/customer/edit/<%= customer.id %>" class="szerkesztes">Szerkesztés</a>
                    <a href="/customer/delete/<%= customer.id %>" class="torles">Törlés</a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<a href="/" class="back-button">Vissza</a>
</body>
</html>
